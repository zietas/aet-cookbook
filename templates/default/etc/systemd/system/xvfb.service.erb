[Unit]
SourcePath=/etc/init.d/xvfb
Description=xvfb
After=remote-fs.target systemd-journald-dev-log.socket

[Service]
Type=forking
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
ExecStart=/etc/init.d/xvfb start
ExecStop=/etc/init.d/xvfb stop

[Install]
WantedBy=multi-user.target
